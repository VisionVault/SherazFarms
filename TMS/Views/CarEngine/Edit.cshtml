
@{
    ViewData["Title"] = "Edit Car Engine";
}

<div class="row">
    <div class="col-md-12">
        <input id="InitialEngineNumber" type="text" hidden readonly />
        <div class="form-group">
            <label>Model</label>
            <select id="CarBrandId" type="text" class="form-control form-control-sm"></select>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Engine #</label>
                    <input id="EngineNumber" type="text" class="form-control form-control-sm" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Engine CC</label>
                    <input id="EngineCC" type="text" class="form-control form-control-sm" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Capacity</label>
                    <input id="OilCapacity" type="text" class="form-control form-control-sm" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 8.33%" class="text-center">Sr.</th>
                            <th style="width: 25%">Company</th>
                            <th style="width: 16.66%" class="text-center">Oil Filter</th>
                            <th style="width: 16.66%" class="text-center">Air Filter</th>
                            <th style="width: 16.66%" class="text-center">Fuel Filter</th>
                            <th style="width: 16.66%" class="text-center">Cabin Filter</th>
                        </tr>
                    </thead>
                    <tbody id="tBody">
                        <tr>
                            <td class="text-center">1</td>
                            <td>LEPPON</td>
                            <td class="text-center"><input class="OilFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="AirFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="FuelFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="CabinFilter form-control form-control-sm" /></td>
                        </tr>
                        <tr>
                            <td class="text-center">2</td>
                            <td>OEM</td>
                            <td class="text-center"><input class="OilFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="AirFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="FuelFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="CabinFilter form-control form-control-sm" /></td>
                        </tr>
                        <tr>
                            <td class="text-center">3</td>
                            <td>GUARD</td>
                            <td class="text-center"><input class="OilFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="AirFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="FuelFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="CabinFilter form-control form-control-sm" /></td>
                        </tr>
                        <tr>
                            <td class="text-center">4</td>
                            <td>OTHERS</td>
                            <td class="text-center"><input class="OilFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="AirFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="FuelFilter form-control form-control-sm" /></td>
                            <td class="text-center"><input class="CabinFilter form-control form-control-sm" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="form-group">
            <button id="btnSave" class="btn btn-sm btn-success shadow"><i class="fas fa-save"></i> Save</button>
            <a asp-action="Index" class="btn btn-sm btn-primary shadow"><i class="fas fa-search"></i> Search</a>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/js/carEngine.js"></script>
    <script>
        var id = '@ViewBag.Id';
        $('document').ready(function () {
            initRSelect($('#CarBrandId'), null, 'CarBrand', 'Search', 'Model');
            Rec('CarEngine', 'Recall', id);

            //click
            $('#btnSave').click(function () {
                S('CarEngine', 'Edit');
            })
        })
    </script>
}


