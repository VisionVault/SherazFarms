
@{
    ViewData["Title"] = "New Product";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="form-group">
            <label>Category</label>
            <select id="CategoryId" class="form-control form-control-sm"></select>
        </div>
        <div class="form-group">
            <label>Brand</label>
            <select id="BrandId" class="form-control form-control-sm"></select>
        </div>
        <div class="form-group">
            <label>Name</label>
            <input id="Name" type="text" class="form-control form-control-sm" />
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Cost</label>
                    <input id="CostPrice" type="text" class="form-control form-control-sm text-right" value="0" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Retail</label>
                    <input id="SalePrice" type="text" class="form-control form-control-sm text-right" value="0" />
                </div>
            </div>
        </div>
        <div class="row" hidden>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Op. Stock</label>
                    <input id="OpeningStock" type="text" class="form-control form-control-sm text-right" value="0" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Op. Value</label>
                    <input id="OpeningValue" type="text" class="form-control form-control-sm text-right" value="0" readonly />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>
                <input id="IsActive" type="checkbox" checked /> Active
            </label>
        </div>
        <div class="form-group">
            <button id="btnSave" class="btn btn-sm btn-success shadow"><i class="fas fa-save"></i> Save</button>
            <a asp-action="Index" class="btn btn-sm btn-primary shadow"><i class="fas fa-search"></i> Search</a>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
@section Scripts
{
    <script src="~/js/product.js"></script>
    <script>
        $('document').ready(function () {
            initRSelect($('#CategoryId'), null, 'ProductCategory', 'Search', 'Category');
            initRSelect($('#BrandId'), null, 'Brand', 'Search', 'Brand');
            setTimeout(function () { $('#CategoryId').select2('open') }, 500);

            //click
            $('#btnSave').click(function () {
                S('Product', 'Add');
            })            
        })
    </script>
}


