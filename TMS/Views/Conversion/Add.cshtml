
@{
    ViewData["Title"] = "New Conversion";
}
<style>
    body, .form-control {
        font-size: 12px;
    }

    .label {
        background-color: yellow;
        color: black;
        padding: 10px;
    }
</style>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-1">
            <div class="form-group">
                <label>Doc.#</label>
                <input id="DocId" type="text" class="form-control form-control-sm text-center" value="@ViewBag.DocId" readonly />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>Date</label>
                <input id="TransactionDate" type="date" class="form-control form-control-sm" value="@ViewBag.Date" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Raw Product</label>
                <select id="RawProductId" type="text" class="form-control form-control-sm"></select>
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label>Qty</label>
                <input id="RawQty" type="text" class="form-control form-control-sm text-right" value="0" />
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label>Rate</label>
                <input id="RawRate" type="text" class="form-control form-control-sm text-right" value="0" />
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label>Amount</label>
                <input id="RawAmount" type="text" class="form-control form-control-sm text-right" readonly value="0" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Ready Product</label>
                <select id="ReadyProductId" type="text" class="form-control form-control-sm"></select>
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label>Qty</label>
                <input id="ReadyQty" type="text" class="form-control form-control-sm text-right" value="0" />
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label>Rate</label>
                <input id="ReadyRate" type="text" class="form-control form-control-sm text-right" value="0" />
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label>Amount</label>
                <input id="ReadyAmount" type="text" class="form-control form-control-sm text-right" readonly value="0" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group" style="padding-top: 24px;">
                <button id="btnAdd" class="btn btn-sm btn-success"><i class="fa fa-plus"></i> Add</button>
                <button id="btnReset" class="btn btn-sm btn-danger"><i class="fa fa-recycle"></i> Reset</button>
            </div>
        </div>
    </div>
    <div class="tableFixed">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 8.33%" class="text-center">Sr</th>
                    <th style="width: 8.33%" class="text-center" hidden>Raw Product Id</th>
                    <th style="width: 8.33%">Raw Pro.</th>
                    <th style="width: 8.33%" class="text-center">Raw Qty</th>
                    <th style="width: 8.33%" class="text-center">Raw Rate</th>
                    <th style="width: 8.33%" class="text-center">Raw Amt</th>
                    <th style="width: 8.33%" class="text-center" hidden>Ready Product Id</th>
                    <th style="width: 8.33%">Ready Pro.</th>
                    <th style="width: 8.33%" class="text-center">Ready Qty</th>
                    <th style="width: 8.33%" class="text-center">Ready Rate</th>
                    <th style="width: 8.33%" class="text-center">Ready Amt</th>
                    <th style="width: 8.33%" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="tBody"></tbody>
            @*<tfoot id="tFoot">
                    <tr>
                        <th colspan="2"></th>
                        <th class="text-right"></th>
                        <th class="text-right"></th>
                        <th class="text-right"></th>
                        <th class="text-right"></th>
                        <th class="text-right"></th>
                        <th class="text-right"></th>
                        <th class="text-right"></th>
                        <th class="text-right"></th>
                    </tr>
                </tfoot>*@
        </table>
    </div>
    <div class="col-md-12 text-right">
        <div class="form-group" style="padding-top: 24px;">
            <button id="btnSave" class="btn btn-sm btn-success shadow"><i class="fas fa-save"></i> Save</button>
            <a asp-action="Index" class="btn btn-sm btn-primary shadow"><i class="fas fa-search"></i> Search</a>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/conversion.js"></script>
    <script>
        vType = 'S';
        $('document').ready(function () {
            initRSelect($('#RawProductId'), 'Pro', 'Product', 'Search', 'Product');
            initRSelect($('#ReadyProductId'), 'Pro', 'Product', 'Search', 'Product');

            //click
            $('#btnSave').click(function (e) {
                e.preventDefault();
                S('Conversion', 'Add', false);
            })
        })
    </script>
}

