
@{
    ViewData["Title"] = "Edit Stock Transfer";
}
<style>
    body, .form-control {
        font-size: 12px;
        font-weight: bold;
    }

    .label {
        background-color: yellow;
        color: black;
        padding: 10px;
    }
</style>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-1">
            <div class="form-group">
                <label>Doc.#</label>
                <input id="DocId" type="text" class="form-control form-control-sm text-center" value="@ViewBag.DocId" readonly />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>Date</label>
                <input id="TransactionDate" type="date" class="form-control form-control-sm" value="@ViewBag.Date" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Out Product</label>
                <select id="OutProductId" type="text" class="form-control form-control-sm"></select>
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label>Out Qty</label>
                <input id="OutQty" type="text" class="form-control form-control-sm text-right" value="0" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>In Product</label>
                <select id="InProductId" type="text" class="form-control form-control-sm"></select>
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label>In Qty</label>
                <input id="InQty" type="text" class="form-control form-control-sm text-right" value="0" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group" style="padding-top: 24px;">
                <button id="btnAdd" class="btn btn-sm btn-success"><i class="fa fa-plus"></i> Add</button>
                <button id="btnReset" class="btn btn-sm btn-danger"><i class="fa fa-recycle"></i> Reset</button>
            </div>
        </div>
    </div>
    <div class="tableFixed">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 8.33%" class="text-center">Sr</th>
                    <th style="width: 8.33%" class="text-center" hidden>Product Id</th>
                    <th style="width: 25%">Out Product</th>
                    <th style="width: 8.33%" class="text-center">Out Qty</th>
                    <th style="width: 8.33%" class="text-center" hidden>Product Id</th>
                    <th style="width: 25%">In Product</th>
                    <th style="width: 8.33%" class="text-center">In Qty</th>
                    <th style="width: 8.33%" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="tBody"></tbody>
            <tfoot id="tFoot">
                <tr>
                    <th colspan="2"></th>
                    <th class="text-right"></th>
                    <th class="text-right"></th>
                    <th class="text-right"></th>
                    <th class="text-right"></th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-6 text-right">
            <div class="form-group" style="padding-top: 24px;">
                <button id="btnSave" class="btn btn-sm btn-success shadow"><i class="fas fa-save"></i> Save</button>
                <a asp-action="Index" class="btn btn-sm btn-primary shadow"><i class="fas fa-search"></i> Search</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/st.js"></script>
    <script>
        var id = @ViewBag.Id;
        vType = 'P';
        $('document').ready(function () {
            initRSelect($('#OutProductId'), 'Pro', 'Product', 'Search', 'Product');
            initRSelect($('#InProductId'), 'Pro', 'Product', 'Search', 'Product');
            Rec($('#tBody'), 'ST', 'Recall', id);

            //click
            $('#btnSave').click(function (e) {
                e.preventDefault();
                S('ST', 'Edit', false);
            })
            $('#btnPrint').click(function (e) {
                e.preventDefault();
                S('ST', 'Edit', true);
            })
        })
    </script>
}

