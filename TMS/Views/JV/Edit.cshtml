
@{
    ViewData["Title"] = "Edit Journal Voucher";
}

<div class="col-md-12">
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label>Doc.#</label>
                <input id="DocId" type="text" class="form-control form-control-sm text-center" readonly />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Doc.#</label>
                <input id="TransactionDate" type="date" class="form-control form-control-sm" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Debit Acc.</label>
                <select id="DebitAcId" class="form-control form-control-sm"></select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Credit Acc.</label>
                <select id="CreditAcId" class="form-control form-control-sm"></select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Narration</label>
                <input id="Narration" type="text" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label>Amount</label>
                <input id="Amount" type="text" class="form-control form-control-sm text-right" value="0" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group" style="margin-top: 31px">
                <button id="btnAdd" class="btn btn-sm btn-success shadow"><i class="fas fa-plus"></i> Add</button>
                <button id="btnReset" class="btn btn-sm btn-danger shadow"><i class="fas fa-recycle"></i> Reset</button>
            </div>
        </div>
    </div>
    <div class="tableFixed">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th hidden style="width: 8.33%">Debit Id</th>
                    <th style="width: 8.33%">Sr</th>
                    <th style="width: 16.66%">Debit Acc.</th>
                    <th hidden style="width: 8.33%">Credit Id</th>
                    <th style="width: 16.66%">Credit Acc.</th>
                    <th style="width: 33.33%">Narration</th>
                    <th style="width: 16.66%" class="text-center">Amount</th>
                    <th style="width: 8.33%" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="tBody"></tbody>
            <tfoot id="tFoot">
                <tr>
                    <th colspan="4">Totals</th>
                    <th style="width: 8.33%"></th>
                    <th style="width: 8.33%"></th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <button id="btnSave" class="btn btn-sm btn-success shadow"><i class="fas fa-save"></i> Save</button>
            <a asp-action="Index" class="btn btn-sm btn-primary shadow"><i class="fas fa-search"></i> Search</a>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/jv.js"></script>
    <script>
        var id = @ViewBag.Id;
        $('document').ready(function () {
            initRSelectWGAL($('#DebitAcId'), null, 'JV', 'Search', 'Account');
            initRSelectWGAL($('#CreditAcId'), null, 'JV', 'Search', 'Account');
            Rec($('#tBody'), 'JV', 'Recall', id);

            //click
            $('#btnSave').click(function () {
                S($('#tBody'), 'JV', 'Edit');
            })
        })
    </script>
}

